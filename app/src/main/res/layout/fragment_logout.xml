<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_logout_toolbar"
        android:layout_width="match_parent"
        android:titleTextColor="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content"
        android:background="@color/baseColor"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/fragment_logout_textview"
        android:textColor="@color/black_transparency_900"
        />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:layout_margin="10dp"
    android:id="@+id/fragment_logout_button"
    android:background="@drawable/rectangle_5dp_basecolor"
    android:text="@string/button_fragment_logout"/>
</LinearLayout>
