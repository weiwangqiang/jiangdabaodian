<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="43.0dp"
        android:id="@+id/news_body_topRelative"
        >
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingLeft="5.0dp"
            android:id="@+id/browse_back"
            android:layout_centerVertical="true"
            android:background="@drawable/browse_back"
            />
        <RadioButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/collectbg"
            android:button="@null"
            android:layout_centerVertical="true"
            android:id="@+id/browse_collect"
            android:layout_toLeftOf="@+id/browse_share"
             />
        <RadioButton
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="10dp"
            android:id="@+id/browse_share"
            android:button="@null"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/share"
             />
        <ProgressBar
            android:id="@+id/myProgressbar"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#e6e6fa"
            android:layout_alignParentBottom="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:visibility="gone"
            android:progressDrawable="@drawable/progress_bar_drawable"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <WebView
        android:id="@+id/webView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/news_body_topRelative" />

</LinearLayout>
