<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:clickable="false"
    card_view:cardCornerRadius="0dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recycler_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/grey_900"
            android:textSize="@dimen/recycler_message_title" />
        <TextView
            android:id="@+id/recycler_message_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="theme"
            android:drawablePadding="@dimen/recycler_message_drawable_padding"
            android:drawableLeft="@drawable/ic_turned_in_not_black_18dp"
            android:layout_marginTop="@dimen/recycler_message_child_margin"
            android:textSize="@dimen/recycler_message_child"
            android:textColor="@color/grey_600" />
        <TextView
            android:id="@+id/recycler_message_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="company"
            android:drawablePadding="@dimen/recycler_message_drawable_padding"
            android:drawableLeft="@drawable/ic_company_black_18dp"
            android:layout_marginTop="@dimen/recycler_message_child_margin"
            android:textSize="@dimen/recycler_message_child"
            android:textColor="@color/grey_600" />
        <TextView
            android:id="@+id/recycler_message_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="city"
            android:drawablePadding="@dimen/recycler_message_drawable_padding"
            android:layout_marginTop="@dimen/recycler_message_child_margin"
            android:drawableLeft="@drawable/ic_city_black_18dp"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/recycler_message_child"  />


        <TextView
            android:id="@+id/recycler_message_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="position"
            android:drawablePadding="@dimen/recycler_message_drawable_padding"
            android:drawableLeft="@drawable/ic_location_black_18dp"
            android:layout_marginTop="@dimen/recycler_message_child_margin"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/recycler_message_child"
            />

        <TextView
            android:id="@+id/recycler_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/recycler_message_child"
            android:drawablePadding="@dimen/recycler_message_drawable_padding"

            android:layout_marginTop="@dimen/recycler_message_child_margin"
            android:text="time"
            android:drawableLeft="@drawable/ic_schedule_black_18dp"
            android:textColor="@color/grey_600"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />
    </LinearLayout>
</android.support.v7.widget.CardView>
