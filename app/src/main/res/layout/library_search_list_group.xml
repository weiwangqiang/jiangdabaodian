<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF" >
  <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="60.0dp"
        
      >
      
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentBottom="true"
        >
        <View 
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:background="@color/gray"
            />
        
        <View 
        
        android:layout_width="1.0dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10.0dp"
        android:background="@color/gray"
            />
     <ImageView 
        android:layout_width="33.0dp"
        android:layout_height="33.0dp"
          android:layout_marginLeft="13.0dp"
        android:id="@+id/library_search_list_header_image"
        android:layout_centerVertical="true"
        android:background="@drawable/list_extend_off"/>

  <TextView
    android:id="@+id/library_search_list_header_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   	android:layout_toRightOf="@id/library_search_list_header_image"
    android:layout_marginLeft="8dp"
    android:layout_centerVertical="true"
    android:text="header"
    android:textColor="#292929"
    android:textSize="15.0sp" />
         <View 
        android:layout_width="1.0dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@color/gray"
        android:layout_marginRight="10.0dp"
            />
           <View 
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:layout_marginRight="10.0dp"
        android:layout_marginLeft="10.0dp"
            />
           <TextView 
        android:layout_width="fill_parent"
        android:layout_height="10.0dp"
               />
    </RelativeLayout>
      
  </RelativeLayout>

</LinearLayout>
